{
  "name": "task-manager-frontend",
  "version": "2.0.0",
  "description": "Task Manager V2 Frontend - A modern task management application",
  "main": "app.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint *.js --fix",
    "lint:check": "eslint *.js",
    "serve": "http-server -p 8081 -c-1 --cors",
    "build": "npm run lint && npm run test",
    "start": "npm run serve",
    "validate": "npm run lint:check && npm run test && echo 'All validations passed!'"
  },
  "keywords": [
    "task-management",
    "frontend",
    "javascript",
    "html",
    "css",
    "rest-api"
  ],
  "author": "Task Manager Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.45.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "http-server": "^14.1.1",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "jsdom": "^22.1.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "*.js",
      "!coverage/**",
      "!node_modules/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "globals": {
      "TaskManager": "readonly"
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}